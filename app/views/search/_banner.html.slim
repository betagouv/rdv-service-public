section#hero.hero.hero-home.py-2
  .container
    .col-lg-12.justify-content-md-center
      h1.text-white
        - if context.invitation?
          | Vous avez été invité à prendre&nbsp;
          span.text-secondary rendez-vous
        - else
          | Prenez&nbsp;
          span.text-secondary rendez-vous en ligne
        br
          | avec votre département&nbsp;
          - if context.departement.present?
            | le &nbsp;
            span.text-secondary #{context.departement}
      - if context.motif.present?
        h3.text-white.mb-4 #{context.motif.name}
      - elsif context.service.present?
        h3.text-white.mb-4 en #{context.service.name}
