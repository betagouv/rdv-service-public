= form_for resource, as: resource_name, url: session_path(resource_name) do |f|
  = render "devise/shared/error_messages", resource: resource
  .form-group
    = f.label :email
    = f.email_field :email, autofocus: true, class: "form-control", placeholder: "nom.prenom@email.com"
  .form-group
    = f.label :password
    = f.password_field :password, autocomplete: "off", required: true, class: "form-control ", placeholder: "Votre mot de passe", id: "password"
    span.fa.fa-fw.fa-eye.toggle-password role="button" aria-hidden="true" tabindex="-1"

    .mt-1.mb-3= link_to "Mot de passe oubli√© ?", new_password_path(resource_name)

  .form-group.mb-0.text-center
    = f.submit "Se connecter", class: "btn btn-primary"
