- content_for(:menu_item) { "menu-absences" }
- content_for(:menu_agent_select_path_helper_name) { "new_admin_organisation_agent_absence_path" }

- content_for :title do
  - if @absence.agent == current_agent
    = t(".new_busy_time")
  - else
    = t(".new_busy_time_for", full_name: @absence.agent.full_name)

- content_for :breadcrumb do
  ol.breadcrumb.m-0
    li.breadcrumb-item
      = link_to admin_organisation_agent_absences_path(current_organisation, @absence.agent) do
        - if @absence.agent == current_agent
          = t(".your_busy_times")
        - else
          = t(".busy_time_of", full_name: @absence.agent.full_name)
    li.breadcrumb-item.active
      = t(".new_busy_time")

.row.justify-content-center
  .col-md-6
    .card
      .card-body
        = render "form", absence: @absence, agent: @agent
