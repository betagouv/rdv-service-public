.col-12
  .card.light-gray-card
    .card-body.p-2
      .mb-1
        = render "admin/users/identity", user: rdvs_user.user
      - notes = rdvs_user.user.notes_for(current_organisation)
      - if notes.present?
        .rdv_user_notes
          i.fa.fa-info-circle.text-primary-blue.mr-2
          = simple_format(notes, {}, wrapper_tag: :span)
      div
        = render "admin/rdvs_users/notifications_email", rdvs_user: rdvs_user
      div
        = render "admin/rdvs_users/notifications_sms", rdvs_user: rdvs_user
      div
      = render "admin/rdvs_users/notifications_lifecycle", rdvs_user: rdvs_user
