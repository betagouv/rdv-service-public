= territory_navigation(t(".title"), [link_to(t(".show_sms_configuration"), admin_territory_sms_configuration_path(current_territory))])

.row.justify-content-center
  .col-md-6
    .card
      .card-body
        = simple_form_for current_territory, url: admin_territory_sms_configuration_path(current_territory) do |f|
          = render "model_errors", model: current_territory
          = f.input :sms_provider, collection: Territory.sms_providers.keys, allow_blank: true

          = f.input :sms_configuration, as: :string

          .text-right
            = f.button :submit
