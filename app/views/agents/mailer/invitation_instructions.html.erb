<p><%= t("devise.mailer.invitation_instructions.hello", email: @resource.first_name || @resource.email) %></p>

<% if @resource.invited_by.is_a?(Agent) %>
  <p><%= t("devise.mailer.invitation_instructions_for_agents.body", inviter: @resource.invited_by.full_name, service: @resource.service.name, domain_name: domain.name) %></p>
<% else %>
  <p><%= t("devise.mailer.invitation_instructions_for_agents.invited_by_super_admin", service: @resource.service.name, domain_name: domain.name) %></p>
<% end %>

<p><%= link_to t("devise.mailer.invitation_instructions_for_agents.accept"), accept_invitation_url(@resource, invitation_token: @token) %></p>

<% if @resource.invitation_due_at %>
  <p>
    <%= t( \
      "devise.mailer.invitation_instructions_for_agents.accept_until", \
      due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format'), \
      inviter: @resource.invited_by.full_name, \
      inviter_email: @resource.invited_by.email \
    ).html_safe %>
  </p>
<% end %>

<p><%= t("devise.mailer.invitation_instructions_for_agents.ignore") %></p>
