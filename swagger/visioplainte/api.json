              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "description": "Annule le rdv. Il apparaîtra encore dans la liste des rdv du guichet.",
        "responses": {
          "200": {
            "description": "Annule le rdv",
            "content": {
              "application/json": {
                "examples": {
                  "example": {
                    "value": {
                      "id": 8,
                      "created_at": "2024-08-18 14:00:00 +0200",
                      "duration_in_min": 30,
                      "ends_at": "2024-08-19 08:30:00 +0200",
